<div class="row">
  <h1 class="text-center">THE LIST!</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table-striped">
      <tbody class='question-list'>
        <% @questions.each_with_index do |question, i| %>
          <tr>
            <td id="<%= i+1 %>"><%= link_to i+1, question_path(question) %>:  <%= question.headline %></td>
            <td>by <%= question.user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class ="col-md-3">
    <div class="errors"></div>
    <%= link_to "Ask new question", new_question_path, id: "new_question", remote: true, class: "btn btn-primary" %>
  </div>
</div>
