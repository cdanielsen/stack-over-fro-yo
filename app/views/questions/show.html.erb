<div class="row">
  <h1 class="text-center">This noob's got a question!</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4 id="edit_headline"><%= @question.headline %></h4>
    <p id="edit_content"><%= @question.content %></p>
  </div>
  <div class="col-md-3">
    <div class="errors"></div>
    <%= link_to "Edit Question", edit_question_path(@question), class: "btn btn-primary", id: 'edit_question', remote: true %>
    <%= link_to "Delete Question", question_path(@question), class: "btn btn-danger",
                                                             id: "delete_question",
                                                             data: { method: 'delete',
                                                                     confirm: "Woah -- you sure brosef?"} %>
</div>
</div>
